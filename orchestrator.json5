{
  devDependenciesLocation: "orchestrator-deps",
  verbose: true,
  processes: [
    {
      name: "3db",
      source: "3sig/3suite-db",

      sourceActions: [{ type: "chmod" }],


      // uncomment the following lines to use the local build
      //sourceType: "local",
      //localPath: "../../3suite/3suite-db",


      config: {
        verbose: true,
        plugins: [
            {
                name: "websockets",
                path: "3db/websockets.js",

                config: {
                    serverUrl: "localhost:8080",
                    websocketPrefix: "3db/"
                }
            }
        ]
      }
    },
    {
        name: "websocket-server",
        source: "3sig/3suite-websockets",
        sourceActions: [{ type: "chmod" }],
        config: {
          port: 8080,
        }
    },
    {
        name: "websockets",
        sourceType: "local",
        localPath: "./build",
        sourceFileType: "pattern-match",
        sourceFilePattern: "main.js",
        sourceExclude: true,
        sourceActions: [
          { type: "move", location: "./3db", filename: "websockets.js" }
        ],
    },
  ]
}
